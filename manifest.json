{
  "manifest_version": 3,
  "name": "Proxy Extension",
  "version": "1.1",
  "description": "Extension to connect to a proxy server.",
  "permissions": [
    "proxy",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Proxy Extension (Disconnected)",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}